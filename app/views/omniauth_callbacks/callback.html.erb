<% if @oauth[:access_token].present? %>
  <% auth_json = raw @oauth.to_json %>
  <%= javascript_tag do %>
    window.opener.postMessage({ auth: '<%= auth_json %>' }, '<%= root_url %>');
  <% end %>
<% else %>
  <%= javascript_tag do %>
    window.opener.postMessage({ error: 'failed' }, '<%= root_url %>');
  <% end %>
<% end %>
